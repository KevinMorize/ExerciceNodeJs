<%- include('../includes/header.ejs')%>

<div class="ui input" id="searchDiv">
    <input type="text" name="filter" id="searchBar" placeholder="Entrez la race d'un compagnon">
</div>

<div class="homeTitles" id="firstTitle">
    <h3>Autour de moi :</h3>
</div>

<div class="dog card" id="dogsAroundSection">
    <% usersAround.map(function(e) { %>
        <% if (e.city === userCp) {Â %>
            <% dogsAround.map(function(elem) { %>
                <% if (elem.idUser === e.idUser && elem.idUser !== user.idUser) { %>
                    <div class="ui card">
                        <a href="/dog-profil?id=<%= elem.idDog %>">
                                <% if (elem.dogAttachment) { %>
                                    <img class="ui image" src="tmp/<%= elem.dogAttachment %>">    
                                <% } else { %>  
                                    <img class="ui image" src="img/profil-pic.png" style="object-fit: contain;">    
                                <% } %> 
                                
                                <div class="content">
                                    <h4><%= elem.name %></h4>
                                </div>
                        </a>
                    </div>
                <% } %>
            <% }); %>
        <% } %>
    <% }); %>
</div>

<div class="homeTitles">
    <h3>Plus de compagnons :</h3>
</div>

<div class="dog card" id="searchDogsSection">
    <% dogsAround.map(function(elem) { %>
        <% if (elem.idUser !== user.idUser) { %>
            <div class="ui card">
                <a href="/dog-profil?id=<%= elem.idDog %>">
                    <% if (elem.dogAttachment) { %>
                        <img class="ui image" src="tmp/<%= elem.dogAttachment %>">    
                    <% } else { %>  
                        <img class="ui image" src="img/profil-pic.png" style="object-fit: contain;">    
                    <% } %>                                  
                    <h4><%= elem.name %></h4>
                    <h5 class="breed"><%= elem.breed %></h5>
                </a>
            </div>
        <% } %>
    <% }); %>
</div>

<script type="text/javascript" src="filters.js"></script>


