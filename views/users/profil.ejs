<%- include('../includes/header.ejs')%>
  
<div id="profil-img-container">
  <img src="/img/cover-pic.png" alt="img-cover" id="img-cover-user">
  <img src="/img/profil-pic.png" alt="img-profil" id="img-profil-user">
</div>

<div id="profil-infos-container">
  <p id="user-name"><%- user.username %> (<%- user.city %>)</p>
  <p id="user-bio"><%- user.bio %></p>

  <a class="ui icon button" href="/edit-profil?id=<%= user.idUser %>" >
    <i class="cog icon"></i>
  </a>
</div>

<hr>

<h2>Mes chiens</h2>

<% if (locals.dogs) { %>
  <div class="dogCard Infinite Scroll">
    <% dogs.forEach(function(dog) { %>
      <div class="ui card">
        <div class="image">
          <img src="/img/profil-pic.png">
        </div>
        <div class="content">
          <a class="header"><%= dog.name %></a>
          <div class="meta">
            <span class="date"><%= dog.birthday %></span>
          </div>
          <div class="description">
            <%= dog.breed %>
          </div>
        </div>
        <div class="extra content">
          <a href="/delete-dog?id=<%= dog.idDogs %>" onClick="return confirm('Êtes-vous sûr ?')" class="ui red button"><i class="trash icon"></i></a>
        </div>
      </div>
    <% }); %>
  </div>
<% } %>


