<%- include('../includes/header.ejs')%>
  
<div id="profil-img-container">
  <img src="tmp/<%= user.cover %>" alt="img-cover" id="img-cover-user">
  <img class="ui centered medium image" src="tmp/<%= user.userAttachment %>" id="userImg" alt="userImg">
</div>

<div id="profil-infos-container">
  <p id="user-name"><%- user.username %> (<%- user.city %>)</p>
  <p id="user-bio"><%- user.bio %></p>

  <a class="ui icon button" href="/user-update" >
    <i class="cog icon"></i>
  </a>
</div>

<hr>

<h2>Mes chiens</h2>

<% if (locals.dogs) { %>
  <div class="dogCard">
    <% dogs.forEach(function(dog) { %>
      <div class="ui card">
        <a href="/dog-profil?id=<%= dog.idDog %>">
            <div class="image">
              <img class="ui small image" src="tmp/<%= dog.dogAttachment %>">
            </div>
            <div class="content">
              <h3><%= dog.name %></h3>
            </div>
          </a>
      </div>
    <% }); %>
  </div>
<% } %>

<a id="addDogButton" href="/dog-add">Ajouter un chien <i class="plus square icon"></i></a>

<hr>

<h2>Mes favoris</h2>

