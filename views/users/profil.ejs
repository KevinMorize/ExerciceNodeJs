<%- include('../includes/header.ejs')%>
  
<div id="profil-img-container">
  <img src="/img/cover-pic.png" alt="img-cover" id="img-cover-user">
  <img src="/img/profil-pic.png" alt="img-profil" id="img-profil-user">
</div>

<div id="profil-infos-container">
  <p id="user-name"><%- locals.name %> (<%- locals.city %>)</p>
  <p id="user-bio"><%- locals.bio %></p>

  <a class="ui icon button" href="/update-profil?id=<%= locals.id %>" >
    <i class="cog icon"></i>
  </a>
</div>

<hr>

<h2>Mes chiens</h2>

<div id="myDogs">
  <% dogInfo.forEach(function(dog) { %>
      <div id="dogItem">
        <p><%= dog.nom %></br>
        <%= dog.race %></p>
        <a href="/delete-dog?id=<%= dog.idDogs %>" onClick="return confirm('Êtes-vous sûr ?')" class="ui red button"><i class="trash icon"></i></a>
      </div>
  <% }) %> 
</div>

  <a id="addDogButton" href="/add-dog">Ajouter un chien <i class="plus square icon" href="/add-dog"></i></a>


<hr>

